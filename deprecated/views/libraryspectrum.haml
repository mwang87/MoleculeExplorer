%div#spectruminformation
    %table.table.table-striped.table-condensed.tablesorter
        %thead
            %tr
                %th{:style=>"vertical-align:middle"}= "Dataset"
                %th{:style=>"vertical-align:middle"}= "Matches To Dataset"
                %th{:style=>"vertical-align:middle"}= "Analogs In Dataset"
        - @datasets.each do |dataset|
            %tr
                %td{:style=>"vertical-align:middle"}= dataset.name
                %td{:style=>"vertical-align:middle"}= Datasetidentification.count(:dataset => dataset, :libraryspectrum => @library_spectrum)
                %td{:style=>"vertical-align:middle"}= Datasetanalog.count(:dataset => dataset, :libraryspectrum => @library_spectrum)